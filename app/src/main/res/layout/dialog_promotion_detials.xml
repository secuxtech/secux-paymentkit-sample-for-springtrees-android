<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:background="@null">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/common_alert_background_shape"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textview_promotion_type"
            android:layout_width="280dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"

            android:textAlignment="center"
            android:text="Promotion"
            android:textColor="#282828"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textview_promotion_store_name"
            android:layout_width="280dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"

            android:textAlignment="center"
            android:text="Store name"
            android:textColor="#282828"
            android:textSize="20sp" />


        <ImageView
            android:id="@+id/imageView_storelogo"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:visibility="invisible"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/textview_promotion_name"
            android:layout_width="280dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"

            android:text="Promotion name"
            android:textColor="#282828"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/textview_promotion_desc"
            android:layout_width="280dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"


            android:text="Promotion desc"
            android:textColor="#282828"
            android:textSize="20sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_common_alert_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@null"
                android:onClick="onCancelButtonClick"

                android:textSize="15sp"
                android:textColor="#9C9C9C"
                android:text="Cancel" />

            <Button
                android:id="@+id/button_common_alert_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@null"
                android:onClick="onConfirmButtonClick"

                android:textSize="15sp"
                android:textColor="@color/colorPurple"
                android:text="Confirm" />

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
